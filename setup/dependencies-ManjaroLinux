#!/usr/bin/env bash
#vim:ts=2:sw=2:expandtab
echo "Installing prerequisites for yay..."
sudo pacman -S base-devel fakeroot jshon expac cower wget

echo "Installing base packages..."
yay --noconfirm -S \
  termite \
  bash-completion \
  xorg-xinit \
  xorg-xset

echo "Installing Python dependencies..."
yay --noconfirm -S \
  python-basiciw \
  python-netifaces \
  python-yaml \
  python-pillow \
  python-urllib3 \
  python2-suds

echo "Installing window manager dependencies..."
yay --noconfirm -S \
  xcb-util-keysyms \
  xcb-util-wm \
  xcb-util-cursor \
  yajl \
  startup-notification \
  libev

echo "Installing tools..."
yay --noconfirm -S \
  i3lock \
  i3-gaps \
  i3stauts \
  wireless_tools \
  xorg-xbacklight \
  gsimplecal \
  evolution \
  gnome-keyring \
  libsecret \
  seahorse \
  feh \
  acpi \
  xdotool \
  pulseaudio-ctl \
  pavucontrol \
  network-manager-applet \
  networkmanager-openvpn \
  imagemagick \
  dunst \
  python \
  python-pip \
  python2-pip \
  picom \
  gopass \
  ttf-font-awesome-4 \
  ohsnap \
  ttf-hack \
  thunar \
  thunar-archive-plugin \
  file-roller \
  tumbler \
  eog \
  numix-gtk-theme-git \
  numix-icon-theme-git \
  tk \
  aspell-en \
  evince \
  rofi \
  libmtp \
  gvfs-mtp \
  vim-airline \
  vim-fugitive \
  vim-gruvbox-git \
  vim-airline-gruvbox-git \
  vim-gitgutter-git \
  xtitle-git \
  openssh \
  arandr \
  xclip \
  authy-snap \
  xedgewarp-git \
  unclutter-xfixes-git \
  thefuck \
  youtube-dl \
  slop \
  maim \
  neofetch-git \
  w3m \
  htop \
  bluez \
  bluez-utils \
  pulseaudio-bluetooth \
  blueman \
  redshift \
  google-chrome \
  firefox \
  lm_sensors \
  ttf-windows \
  gopass \
  authy \
  starship-bin \
  wmctrl

echo "Installing some python stuff..."
yay --noconfirm -S \
  python-pillow \
  python-urllib3

echo "Installing some perl stuff..."
yay --noconfirm -S \
  perl-anyevent-i3 \
  perl-json-xs \
